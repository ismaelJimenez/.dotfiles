addToPathFront() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

export XDG_CONFIG_HOME=$HOME/.config
VIM="lvim"

export EDITOR=$VIM
export GIT_EDITOR=$VIM

addToPathFront $HOME/.local/bin

tl() { 
    lazygit
}

vim() {
    lvim "$@"
}

se() {
    lvim $(find -L * -path '*/\.*' -prune -o -type f -print -o -type l -print 2> /dev/null | fzf)
}

sef() {
    lvim $(find -L * -path '*/\.*' -prune -o -type f -print -o -type l -print 2> /dev/null | grep $1 | fzf)
}
